{
  "name": "martillo",
  "version": "0.1.0",
  "private": true,
  "description": "Plataforma de subastas hibridas",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "prebuild": "node scripts/check-node.js",
    "dev:frontend": "node scripts/dev-frontend.js",
    "dev:backend": "node scripts/dev-backend.js",
    "dev": "node scripts/dev.js",
    "build:frontend": "npm run build -w apps/frontend",
    "build:backend": "npm run build -w apps/backend",
    "build": "npm run build:backend && npm run build:frontend",
    "lint": "npm run lint -w apps/frontend -w apps/backend",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  }
}
